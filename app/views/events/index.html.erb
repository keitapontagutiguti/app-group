<div class="center-block base-width">

<%= search_form_for @search do |f| %>
  <div class="field">
    <%= f.label :title_cont, 'search from title:' %>
    <%= f.search_field :title_cont %>
  </div>
  <div class="form-group">
    <%= f.label :day_cont, 'search from date' %><br>
    <div class='input-group date datepicker'>
      <span class="input-group-addon">
        <span class="fa fa-calendar"></span>
      </span>
    <%= f.search_field :day_cont, class: 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<table>
  <thead>
    <th>Image</th>
    <th>Title</th>
    <th>Text</th>
    <th>Date</th>
    <th>Place</th>
    <th>Tag</th>
    <th>Comment</th>
  </thead>

  <tbody>

  <% @events.each do |event| %>

  <tr>

    <% if event.image? %>
    ã€€ <td><%= image_tag event.image.url, class: "img-responsive img-rounded event-samnail" %></td>
    <% else %>
      <td><%= image_tag 'noimage.gif', class: "img-responsive img-rounded event-samnail" %></td>
    <% end %>

    <td><%= link_to event.title, event_path(event) %></td>
    <td><%= event.body %></td>
    <td><%= event.day %></td>
    <td><%= event.area %></td>
    <td><%= render 'tag_list', tag_list: event.tag_list %></td>
    <td>Comment(<strong><%= event.comments.count %></strong>)</td>
  </tr>

  <% end %>

  </tbody>
</table>

</div>