

<%= form_for(@event) do |f| %>


	<% if @event.errors.any? %>
		<div id="notice" class="well">
			<div id="error_explanation">
				<h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
	    		<ul>
	      			<% @event.errors.full_messages.each do |message| %>
	        			<li><%= message %></li>
	        		<% end %>
	    		</ul>
			</div>
		</div>
	<% end %>


	<div class="form-group">
		<%= f.label :title, "title" %><br>
		<%= f.text_field :title, class:'form-control' %>
		<h6>Can't be blank. Maximum <strong>100</strong> characters.</h6>
	</div>

	<div class="form-group">
		<%= f.label :body, "details" %><br>
		<%= f.text_area :body, class:'form-control' %>
		<h6>Maximum <strong>500</strong> characters.</h6>
	</div>

	<div class="form-group">
		<%= f.label :image %><br>
		<%= f.file_field :image, class:'file', "data-show-upload" => false  %>
	</div>

	<div class="form-group">
		<%= f.label :area %><br>
		<%= f.text_field :area, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :day, "date" %><br>
		<div class='input-group date datetimepicker'>
			<span class="input-group-addon">
  			<span class="fa fa-calendar"></span>
  		</span>
  		<%= f.text_field :day, class: 'form-control' %>
  	</div>
  </div>

	<div class="form-group">
		<%= f.label :capacity, "capacity" %><br>
		<%= f.number_field :capacity, class:'form-control' %>
		<h6>Can't be blank. Please set up the capacity greater than <strong>1</strong>.</h6>
	</div>

	<div class="form-group">
		<%= f.label :tag_list, "tag (separated by commas.)" %><br>
		<%= f.text_field_tag "event[tag_list]", @event.tag_list.join(','), class:'form-control' %>
	</div>

	<div class="action ">
		<%= f.submit class: "btn btn-primary form-control" %>
	</div>
<% end %>
