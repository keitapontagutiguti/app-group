<div class="post_top">
	<h1>comments on board</h1>
	 <%= image_tag 'posts1.jpg',:class=>"background_post"%>
	 <%= image_tag 'post2.jpg',:class=>"filter"%>

	 </div>


</div>

 <div class="board_body"><h2>投稿一覧</h2>
 <p class="btn_post"><%=link_to "new",new_post_path,:style=>"text-decortion:none;" %></p>
<table class="table table-striped">
<thead >	<tr>
	<th>タイトル</th>
	</tr>
	</thead>
	<tbody>
	<% @posts.each do |post| %>
	<tr>
	<th scope="row"><% post.id %></th>
	<td>
	
		<%=link_to post.title, post_path(post) %>
		<%= render 'tag_list', tag_list: post.interest_list %>
		</td>
	</tr>
	<% end %>
	</tbody>
	
</table>
</div>


  




 

