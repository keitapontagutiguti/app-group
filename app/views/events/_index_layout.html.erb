<div class="event-box">

<table class="table table-hover table-condensed index-table">
  <thead>
    <th>Image</th>
    <th>Title</th>
    <th>Text</th>
    <th>Date</th>
    <th>Place</th>
    <th>Capacity</th>
    <th>Tag</th>
    <th>Comment</th>
  </thead>

  <tbody>

  <% @events.each do |event| %>

  
  <tr>
  <%= link_to event_path(event) do %>
    <% if event.image? %>
    ã€€ <td><%= image_tag event.image.url, class: "img-responsive img-rounded event-samnail" %></td>
    <% else %>
      <td><%= image_tag 'noimage.gif', class: "img-responsive img-rounded event-samnail" %></td>
    <% end %>

    <td><%= link_to event.title, event_path(event) %></td>
    <td><%= event.body %></td>
    <td><%= event.day %></td>
    <td><%= event.area %></td>
    <td><%= event.capacity %></td>
    <td><%= render 'tag_list', tag_list: event.tag_list %></td>
    <td>Comment(<strong><%= event.comments.count %></strong>)</td>
  <% end %>
  </tr>
  
  <% end %>

  </tbody>
</table>

</div>