<%= form_for(@event) do |f| %>

	<% if @event.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      	<% @event.errors.full_messages.each do |message| %>
        	<li><%= message %></li>
      	<% end %>
      </ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</div>

	<div class="field">
		<%= f.label :image %><br>
		<%= f.file_field :image %>
	</div>

	<div class="field">
		<%= f.label :area %><br>
		<%= f.text_field :area %>
	</div>

	<div class="field">
		<%= f.label :day %><br>
		<%= f.number_field :day %>
	</div>

	<div class="field">
		<%= f.label :capacity %><br>
		<%= f.number_field :capacity %>
	</div>

	<div class="field">
	  ユーザーID
	  ここに"current_user.id"が入ります。
	</div>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>