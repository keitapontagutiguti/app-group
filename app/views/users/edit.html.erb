<div class="edit-profile-box">
<h2>Edit your profile</h2>


<%= form_for(@user) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control center-block" %>
  </div>

  <div class="form-group">
    <%= f.label :nationality %><br />
    <%= f.text_field :nationality, class: "form-control center-block" %>
  </div>

  <div class="form-group">
    <%= f.label :profile_image, class:"content" %><br>
    <%= f.file_field :image, class:"content" %>
  </div>

  <div class="form-group">
    <%= f.label :introduction %><br />
    <%= f.text_area :inform, class: "form-control center-block" %>
  </div>

  <%= f.submit "Update" %>

<% end %>


<%= link_to "Back", :back %>

</div>